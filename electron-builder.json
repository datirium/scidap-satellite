{
    "productName": "scidap-satellite",
    "appId": "com.datirium.scidap-satellite",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "directories": {
        "output": "release/"
    },
    "extraFiles": [],
    "extraResources": [
        "Services/**"
    ],
    "asar": false,
    "asarUnpack": [],
    "files": [
        "**/*",
        "!**/*.ts",
        "!**/*.js.map",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!Services/",
        "!build-scripts/",
        "!src/",
        "!utils/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig*.json",
        "!tslint.json",
        "!postinstall*.js"
    ],
    "win": {
        "icon": "dist",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "category": "public.app-category.business",
        "icon": "dist",
        "target": [
            "dmg",
            "zip"
        ],
        "publish": {
            "provider": "generic",
            "url": "https://scidap.com/update/releases/",
            "channel": "latest",
            "publishAutoUpdate": true
        },
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "./build-scripts/entitlements.mac.inherit.plist",
        "entitlementsInherit": "./build-scripts/entitlements.mac.inherit.plist"
    },
    "linux": {
        "icon": "dist",
        "target": [
            "AppImage"
        ]
    }
}