{
    "productName": "scidap-satellite",
    "appId": "com.datirium.scidap-satellite",
    "artifactName": "${productName}-setup-${version}.${ext}",
    "directories": {
        "output": "release/"
    },
    "extraFiles": [
        {
            "from": "build/webui-aria2/docs",
            "to": "dist/webui-aria2",
            "filter": [
                "**/*"
            ]
        }
    ],
    "extraResources": [
        "Services/**"
    ],
    "asar": false,
    "asarUnpack": [
        "node_modules/pm2*"
    ],
    "files": [
        "**/*",
        "!**/*.ts",
        "!**/*.js.map",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!Services/",
        "!build-scripts/",
        "!src/",
        "!utils/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig*.json",
        "!tslint.json",
        "!postinstall*.js",
        "!embedded.provisionprofile"
    ],
    "publish": [
        {
            "channel": "latest",
            "publishAutoUpdate": true,
            "updaterCacheDirName": "scidap-satellite-updater",
            "provider": "generic",
            "url": "https://scidap.com/update/releases/"
        }
    ],
    "afterSign": "build-scripts/notarize.js",
    "win": {
        "icon": "dist",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "category": "public.app-category.education",
        "icon": "dist",
        "target": [
            "dmg",
            "zip"
        ],
        "publish": {
            "provider": "generic",
            "url": "https://scidap.com/update/releases/",
            "channel": "latest",
            "publishAutoUpdate": true
        },
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "./build-scripts/entitlements.mac.inherit.plist",
        "entitlementsInherit": "./build-scripts/entitlements.mac.inherit.plist",
        "provisioningProfile": "embedded.provisionprofile",
        "extendInfo": {
            "ElectronTeamID": "WW49A8Y53S"
        }
    },
    "linux": {
        "icon": "dist",
        "target": [
            "AppImage"
        ]
    }
}